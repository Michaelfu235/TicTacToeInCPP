void printBoard(int x[3][3] ){
  char rows[3] = {'A','B','C'};
 
  cout << "  1  2  3" << endl;
  for(int i = 0;i<3;i++){
    cout << rows[i];
    for(int j = 0;j<3;j++){
      if(x[i][j] == 1){
	cout << " X ";
      } else if (x[i][j] == 2){
	cout << " O ";
      } else {
	cout << "   ";
      }
    }
    cout << endl;
  }
}
